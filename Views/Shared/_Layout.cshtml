<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SqlDummySeeder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --bg: #f5f5f7;
            --panel: #ffffff;
            --text: #111;
            --muted: #6e6e73;
            --border: #e5e5ea;
            --accent: #0a84ff;
            --accent-2: #64d2ff;
            --danger: #ff3b30;
            --ok: #34c759;
            --shadow: 0 8px 24px rgba(0,0,0,.08);
        }

        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            background: var(--bg);
            color: var(--text);
            font: 16px/1.5 -apple-system,BlinkMacSystemFont,"SF Pro Text","SF Pro Display","Segoe UI",Roboto,Arial,sans-serif;
        }

        .header {
            position: sticky;
            top: 0;
            z-index: 10;
            background: rgba(255,255,255,.75);
            backdrop-filter: saturate(180%) blur(20px);
            border-bottom: 1px solid var(--border);
        }

        .wrap {
            max-width: 1120px;
            margin: 0 auto;
            padding: 14px 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .brand {
            font-weight: 700;
            font-size: 17px;
            letter-spacing: .2px;
        }

        .nav {
            margin-left: auto;
            display: flex;
            gap: 8px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 13px;
            border-radius: 999px;
            border: 1px solid var(--border);
            background: #fff;
            color: #111;
            text-decoration: none;
            box-shadow: var(--shadow);
        }

        .btn:hover {
            border-color: #d0d0d7;
        }

        .main {
            max-width: 1120px;
            margin: 24px auto;
            padding: 0 20px;
        }

        .card {
            background: var(--panel);
            border: 1px solid var(--border);
            border-radius: 16px;
            box-shadow: var(--shadow);
        }

        .card-pad {
            padding: 18px;
        }

        .footer {
            max-width: 1120px;
            margin: 24px auto 32px;
            padding: 12px 20px;
            color: var(--muted);
            font-size: 13px;
        }

        .badge {
            display: inline-block;
            padding: 3px 10px;
            border-radius: 999px;
            font-size: 12px;
            border: 1px solid var(--border);
            background: #f2f2f7;
            color: #1c1c1e;
        }

        .kbd {
            font: 12px ui-monospace,SFMono-Regular,Menlo,Consolas,monospace;
            padding: 2px 6px;
            border: 1px solid var(--border);
            border-radius: 6px;
            background: #f4f4f4;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .table th {
            color: var(--muted);
            font-weight: 600;
            text-align: left;
            padding: 0 12px 4px;
        }

        .table td {
            background: var(--panel);
            border: 1px solid var(--border);
            border-left: none;
            border-right: none;
            padding: 12px;
            border-radius: 12px;
        }

        .actions {
            display: flex;
            gap: 8px;
        }

        a.btn-small, button.btn-small {
            padding: 7px 10px;
            border-radius: 10px;
            border: 1px solid var(--border);
            background: #fff;
            color: #111;
            text-decoration: none;
            box-shadow: var(--shadow);
        }

        a.btn-small:hover, button.btn-small:hover {
            border-color: #d0d0d7;
        }

        .btn-danger {
            border-color: #ffd1cf;
            background: #ffecec;
            color: #b00000;
        }

        .btn-ok {
            border-color: #c6f4d5;
            background: #eafaf0;
            color: #0b7227;
        }

        .btn-warn {
            border-color: #ffe8b3;
            background: #fff6db;
            color: #7a5400;
        }

        .flash {
            padding: 10px 12px;
            border-radius: 12px;
            margin: 12px 0;
            border: 1px solid var(--border);
            background: #fff;
            box-shadow: var(--shadow);
        }

        .grid {
            display: grid;
            gap: 18px;
        }

        .grid-3 {
            grid-template-columns: repeat(3,minmax(0,1fr));
        }

        @@media (max-width:960px) {
            .grid-3 {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width:640px) {
            .grid-3 {
                grid-template-columns: 1fr;
            }
        }

        .help {
            color: var(--muted);
            font-size: 13px;
        }

        .link-accent {
            color: var(--accent);
            text-decoration: none;
        }

        .link-accent:hover {
            text-decoration: underline;
        }

        .stepper { display:flex; gap:8px; align-items:center; margin: 16px 0; }
        .step { padding:6px 12px; border-radius:999px; background:#eee; color:#333; }
        .step.active { background:#0d6efd; color:#fff; }
        .step.done { background:#20c997; color:#fff; }
        .table-fixed { max-height: 50vh; overflow:auto; }
        .monospace { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
        textarea.monospace { font-size: 0.9rem; }
    </style>
</head>
<body>
    <header class="header">
        <div class="wrap">
            <div class="brand"><a style="color: #111; text-decoration:none;" href="/">My Portal</a></div>
            <nav class="nav">
            </nav>
        </div>
    </header>
    <main class="main">
        @RenderBody()
    </main>
    <div class="footer">Â© Song Long</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
